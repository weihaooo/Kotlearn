<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.assignment.kotlearn.kotlearn">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/kotlearn_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/kotlearn_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.LoginActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.BottomNav1"
            android:label="@string/title_activity_bottom_nav1"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.DailyQuizQuestions"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.ChapterActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.ScanQRActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="your_own_google_maps_api_key" />

        <activity android:name=".ui.GenQRActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.FriendList"
            android:screenOrientation="portrait" ></activity>
    </application>

</manifest>